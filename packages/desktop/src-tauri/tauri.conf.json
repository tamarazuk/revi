{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Revi",
  "version": "0.1.0",
  "identifier": "dev.revi.app",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Revi",
        "width": 1400,
        "height": 900,
        "resizable": true,
        "fullscreen": false,
        "minWidth": 800,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
    "fs": {
      "scope": {
        "allow": ["**/*"],
        "deny": []
      }
    },
    "shell": {
      "open": true,
      "scope": [
        {
          "name": "git",
          "cmd": "git",
          "args": true
        }
      ]
    }
  }
}
