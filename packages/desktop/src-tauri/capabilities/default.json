{
  "$schema": "https://schema.tauri.app/capabilities/1",
  "identifier": "default",
  "description": "Default capabilities for Revi",
  "windows": ["main", "revi-*"],
  "permissions": [
    "core:default",
    "core:window:allow-set-title",
    "fs:default",
    "fs:allow-read-file",
    "fs:allow-write-file",
    "fs:allow-exists",
    "fs:allow-create",
    "fs:allow-mkdir",
    "shell:allow-open",
    "shell:allow-spawn",
    "clipboard-manager:allow-write-text",
    "core:webview:allow-set-webview-zoom",
    "dialog:default",
    "dialog:allow-open"
  ]
}
