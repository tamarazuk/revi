{
  "name": "@revi/cli",
  "version": "0.1.0",
  "description": "CLI for Revi - local code review tool",
  "bin": {
    "revi": "./dist/index.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsup src/index.ts --format cjs --dts --clean",
    "dev": "tsup src/index.ts --format cjs --dts --watch",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist",
    "start": "node dist/index.js"
  },
  "dependencies": {
    "@revi/shared": "workspace:*",
    "commander": "^12.1.0",
    "nanoid": "^5.0.7",
    "picocolors": "^1.0.1",
    "simple-git": "^3.25.0"
  },
  "devDependencies": {
    "@types/node": "^20.14.0",
    "tsup": "^8.0.0",
    "typescript": "^5.4.5"
  }
}
